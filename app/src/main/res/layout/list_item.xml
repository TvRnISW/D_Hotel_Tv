<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@drawable/item_bg_selector"
    android:layout_height="120dp" android:focusable="true">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/txtTime"
            android:textColor="#CEFFFFFF"
            android:textSize="22sp"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:text="12:00PM"
            android:textStyle="bold"
            android:background="#B01B1B1C"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:paddingLeft="50dp"
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:background="#B025282F"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTitle"
                android:textColor="#CEFFFFFF"
                android:text="This is title"
                android:textSize="26sp"
                android:fontFamily="@font/font_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/txtDescription"
                android:textColor="#DDFFFFFF"
                android:text="This is description"
                android:textSize="22sp"
                android:fontFamily="@font/font_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/font_medium"
                android:id="@+id/txtDepartment"
                android:textColor="#FF6F00"
                android:text="This is department"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtSeenStatus"
        android:fontFamily="@font/font_medium"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_orange_light"
        android:text="Unseen Task"
        android:layout_margin="20px"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>