<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/date"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Date"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/room"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Room"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="visible"
            android:id="@+id/charge"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="charge/Credit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/credit"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="credit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
<!--        <TextView-->
<!--            android:visibility="gone"-->
<!--            android:id="@+id/gross"-->
<!--            android:padding="5dp"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@color/white"-->
<!--            android:text="charge"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"/>-->
        <TextView
            android:id="@+id/service"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Service"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tax"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Tax"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/balance"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Balance"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gross"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Total"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>