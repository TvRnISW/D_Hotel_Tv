<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".TestMainActivity">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/font_medium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/font_medium"
            android:textColor="#FFA726"
            android:textSize="22sp"
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:fontFamily="@font/font_medium"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_margin="50dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/txtRoomNumber"
        android:text="Room Number 1309"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="150px"
        android:id="@+id/imgShow"
        android:layout_marginLeft="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/travelguide"
        android:layout_below="@+id/txtRoomNumber"
        android:layout_width="400dp"
        android:layout_height="200dp"/>


    <LinearLayout
        android:id="@+id/lnSources"
        android:background="#0567FF"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <LinearLayout
            android:id="@+id/lnTelevision"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTvLeft"
                android:visibility="visible"
                android:background="@drawable/ic_left"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="#fff"
                android:text="Television"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgTvRight"
                android:visibility="visible"
                android:src="@drawable/ic_right"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnHI"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHIleft"
                android:visibility="gone"
                android:background="@drawable/ic_left"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="#fff"
                android:text="Hotel Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgHIright"
                android:visibility="gone"
                android:src="@drawable/ic_right"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnWeather"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgWeatherLeft"
                android:visibility="gone"
                android:background="@drawable/ic_left"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="#fff"
                android:text="App List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgWeatherRight"
                android:visibility="gone"
                android:src="@drawable/ic_right"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnMyService"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgServiceLeft"
                android:visibility="gone"
                android:background="@drawable/ic_left"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="#fff"
                android:text="My Services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgServiceRight"
                android:visibility="gone"
                android:src="@drawable/ic_right"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

</LinearLayout>