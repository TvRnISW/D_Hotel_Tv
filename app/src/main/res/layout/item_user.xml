<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="wrap_content" android:orientation="horizontal" android:background="@drawable/item_bg_selector"
    android:id="@+id/lnUser"
    android:focusable="true">

    <LinearLayout
        android:paddingLeft="20dp"
        android:focusable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:fontFamily="@font/font_regular"
            android:id="@+id/txtName"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="User name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_marginLeft="10dp"
            android:id="@+id/cbUserSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>